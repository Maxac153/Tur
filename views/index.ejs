  <body>
    <div class="wrapper">
      <main class="main">
        <div>
          <h2 class="subtitle">Добавить игрока в БД</h2>
          <form action="/" method="post" id="post-form">
            <div class="nav-wrapper">
              <div>
                <input
                  class="fullName"
                  type="text"
                  name="fullName"
                  placeholder="Введите ФИО игрока"
                />
              </div>
            </div>
            <button type="submit" id="add-btn">✚</button>
          </form>
        </div>
        <h2 class="subtitle">Список участников</h2>
        <div class="box-draft">
          <div class="box-item">
            <table id="table-players" class="test">
              <tr>
                <th colspan="2" width="659px">Игроки</th>
              </tr>
            </table>
            <div class="box-play"></div>
          </div>
          <div class="box-item">
            <h3 class="subtitle">Поиск игрока</h3>
            <input type="text" id="search-players" />
            <h3 class="subtitle">Список игроков</h3>
